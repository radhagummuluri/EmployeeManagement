@model IEnumerable<EmployeeManagement.Data.Entities.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Employees</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success"><i class="fa fa-plus-square"></i> Employee</a></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="cursor:pointer;" onclick="location.href = '@(Url.Action("Details", "Employee", new { id = item.EmployeeId}))'">
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HireDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId"><i class="fa fa-pen fa-lg"></i></a>  | 
                    <a asp-action="Details" asp-route-id="@item.EmployeeId"><i class="fa fa-info-circle fa-lg"></i></a>  | 
                    <a asp-action="Delete" asp-route-id="@item.EmployeeId" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash fa-lg"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
